{
  "name": "gaming-journal",
  "version": "1.0.0",
  "description": "Personal gaming journal with timeline visualization",
  "type": "module",
  "scripts": {
    "dev": "npm run build:frontend && wrangler dev",
    "deploy": "npm run build:frontend && wrangler deploy",
    "build:frontend": "vite build",
    "db:init": "wrangler d1 execute gaming-journal-db --local --file=./src/db/schema.sql",
    "db:init:remote": "wrangler d1 execute gaming-journal-db --remote --file=./src/db/schema.sql",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint ."
  },
  "dependencies": {
    "hono": "^4.6.0",
    "jose": "^6.1.3",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.11.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.10.15",
    "@cloudflare/workers-types": "^4.20251213.0",
    "@playwright/test": "^1.49.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.6.0",
    "vite": "^5.4.0",
    "vitest": "~3.2.0",
    "wrangler": "^4.54.0"
  }
}
